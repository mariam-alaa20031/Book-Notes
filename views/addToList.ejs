            <div class="mb-3" style="text-align: center;">
            <small class="mb-4"style="color:rgb(186, 24, 24)"><%=error%></small>
          </div>
         <%}%>
         <%if (locals.success){%>
            <div  style="text-align: center;"class="mb-3">
            <small style="color:green"><%=success%></small>
          </div>
         <%}%>

        <div class="mb-3">
          <label for="title" class="form-label">Book Title</label>
          <input type="text" required class="form-control" autofocus placeholder="title" name="title">
        </div>
        <hr>
        <div class="mb-3">
