<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= locals.book? book.title : locals.user?user.username: "YourBooks" %></title>
    <link href="/style.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
  </head>
<%- include("partials/navbar.ejs") %>
<div class="section-header container-fluid" style="margin-top: 0; margin-bottom: 0; flex:1; ">
<div class="container-fluid px-5 mt-3 py-5">
  <div class="wrapper-books">
   <img style="height:270px; width:175px;" src="data:image/jpeg;base64,<%= locals.book? book.cover:"" %>" alt="Book Cover">
   
   <% let bookTitle = ""; %>
   <% let oldTitle = locals.book? book.title.split(" "):""; %>
   <% for (let j = 0; j < oldTitle.length; j++) { %>
    <%    bookTitle+= oldTitle[j].charAt(0).toUpperCase()+ oldTitle[j].slice(1) %>
    <%    bookTitle+= j==oldTitle.length-1?"":" " %>
    <% } %>
   <div class="mx-4" style="display: flex; flex-direction: column; height: 270px; justify-content: flex-end;">
  <h2 style="color:#3C3D37;font-family: Verdana, Geneva, Tahoma, sans-serif"><%= bookTitle %></h2>
   <% 
   let color1 = book.rating >= 1 ? "orange" : "black";
   let color2 = book.rating >= 2 ? "orange" : "black";
   let color3 = book.rating >= 3 ? "orange" : "black";
   let color4 = book.rating >= 4 ? "orange" : "black";
   let color5 = book.rating >= 5 ? "orange" : "black";
   %>
  <div class="stars-book-dets mb-4" style="justify-content: flex-start; margin-bottom: auto;">
    <div>
        <svg xmlns="http://www.w3.org/2000/svg" style="color:<%= color1 %>;" width="20" height="20" fill="currentColor" class="bi bi-star" viewBox="0 0 16 16">
