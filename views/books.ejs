<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%=user.username + "'s books"%></title>
    <link rel="stylesheet" href="style.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
</head>
<body>
<%- include("partials/navbar.ejs") %>
<div class="mt-3" style="width:30%; margin-left:35%">
<form action="/add" method="post">
    <% if (locals.error){%>
        <div class="mb-3" style="text-align: center;">
        <small class="mb-4"style="color:rgb(186, 24, 24)"><%=error%></small>
      </div>
     <%}%>
     <%if (locals.success){%>
        <div  style="text-align: center;"class="mb-3">
        <small style="color:green"><%=success%></small>
      </div>
     <%}%>
    <div class="mb-3">
      <label for="isbn" class="form-label">Book ISBN</label>
      <input type="text" required class="form-control" autofocus placeholder="10/13 digits" name="isbn">
    </div>
    <div style="display:flex; justify-content: flex-end;">
    <button type="submit"  class="btn btn-sm btn-success">Submit</button>
</div>
  </form>
</div>

  <div class="wrapper-books container mt-5 my-5">
    <% if(locals.books){%>
    <%  for(let i=0;i<books.length;i++){%>
        <form method="post" action="/view">
            <input type="hidden" name="bookId" value='<%=books[i].isbn%>' >            
            <img class="books-read" src="data:image/jpeg;base64,<%= books[i].cover %>" onclick="this.form.submit()" alt="Book Cover" />        </form>
    <% }} %>
</div>
<%- include("partials/footer.ejs")%>